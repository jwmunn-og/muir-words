<div class="bg-img">
  <div class="container">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <% if flash[:error].present? %>
        <div class="col-xs-10 col-xs-offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      
      <div class="top-margin">
        <h3 class="sub-text">
          <span>SPLURTY / No. <%= @quote.id %></span> &middot;
          Here's the <span class="underline">best unsolicited outdoors advice</span> you can get!
        </h3>

        <!-- <div class="animated fadeInUp"> -->
          <h1 class="quote"><%= @quote.saying %></h1>
          <h2 class="author quote pull-right">- <%= @quote.author %></h2>
        <!-- </div> -->
        <br class="clear">
        <%= link_to "Give me another quote.", root_path, class: "next-quote" %>
      </div>
    </div>
  </div>
</div>



